---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Personal blog by Cao Duy Hung - Medical student sharing insights about medicine, art, literature, and healthcare" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style is:global>
      :root {
        --app-height: 100%;
      }

      html, body {
        height: 100%;
        height: var(--app-height);
        width: 100%;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
      }

      .gradient-bg {
        background: linear-gradient(125deg, #1a1a1a 0%, #2a2a2a 100%);
        position: relative;
        min-height: 100vh;
        width: 100%;
        overflow-x: hidden;
      }

      .gradient-bg::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background:
          radial-gradient(circle at 15% 50%, rgba(59, 130, 246, 0.1) 0%, transparent 25%),
          radial-gradient(circle at 85% 30%, rgba(16, 185, 129, 0.1) 0%, transparent 25%);
        opacity: 0.7;
        z-index: 0;
        pointer-events: none;
      }

      .gradient-bg::after {
        content: '';
        position: fixed;
        width: 200%;
        height: 200%;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.02'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        animation: slide 60s linear infinite;
        opacity: 0.5;
        z-index: 1;
        pointer-events: none;
      }

      @keyframes slide {
        0% {
          transform: translate(0, 0) rotate(0deg);
        }
        100% {
          transform: translate(-50%, -50%) rotate(45deg);
        }
      }

      .content-layer {
        position: relative;
        z-index: 2;
        min-height: 100vh;
        width: 100%;
        display: flex;
        flex-direction: column;
      }

      @media screen and (max-width: 768px) {
        .content-layer {
          min-height: var(--app-height);
        }
      }
    </style>
    <script>
      // Fix for mobile viewport height issues
      const appHeight = () => {
        const doc = document.documentElement;
        doc.style.setProperty('--app-height', `${window.innerHeight}px`);
      };
      window.addEventListener('resize', appHeight);
      appHeight();
    </script>
  </head>
  <body class="bg-dark-bg text-dark-text font-['Inter'] selection:bg-primary/30 selection:text-white gradient-bg">
    <div class="content-layer">
      <slot />
    </div>
  </body>
</html>
