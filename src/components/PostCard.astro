---
const { post } = Astro.props;
---

<a href={`/blogs/${post.slug}`} class="group">
  <article class="p-6 bg-dark-card rounded-xl border border-dark-text/10 hover:border-primary/30 transition-colors">
    <div class="flex items-center gap-3 mb-4">
      <span class="px-3 py-1 rounded-full bg-primary/10 text-primary text-sm">
        {post.data.category.charAt(0).toUpperCase() + post.data.category.slice(1)}
      </span>
      <time class="text-dark-text/60 text-sm">
        {new Date(post.data.pubDate).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'short',
          day: 'numeric'
        })}
      </time>
    </div>
    <h3 class="text-xl font-semibold mb-2 group-hover:text-primary transition-colors">
      {post.data.title}
    </h3>
    <p class="text-dark-text/80 line-clamp-2">
      {post.data.description}
    </p>
  </article>
</a>
