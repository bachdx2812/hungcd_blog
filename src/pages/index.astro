---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.vue';
---

<Layout
  title="Cao Duy Hung - Personal Blog"
  socialMeta={{
    type: 'website',
    title: 'Cao Duy Hung - Medical Student & Blogger',
    description: 'Personal blog by Cao Duy Hung sharing insights about medicine, art, literature, and healthcare',
    image: new URL('/images/social.webp', import.meta.env.SITE).href,
    url: Astro.url.href,
    imageAlt: 'Cao Duy Hung Blog Cover Image featuring medical and literary elements'
  }}
>
  <Header client:load />
  <main class="container mx-auto px-4 pt-16 md:pt-24">
    <div class="min-h-[calc(100vh-4rem)] flex flex-col items-center justify-center text-center py-8 md:py-0">
      <div class="animate-fade-in max-w-screen-lg mx-auto px-4">
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-4 md:mb-6 bg-gradient-to-r from-primary to-secondary text-transparent bg-clip-text leading-normal pb-2">
          Medicine, Art, Book Reviews<br class="hidden sm:block" />And Everything in Between
        </h1>

        <p class="text-lg mt-5 sm:text-xl md:text-2xl max-w-3xl mx-auto mb-8 sm:mb-10 md:mb-14 text-dark-text/80 leading-relaxed">
          Hi, I'm Cao Duy Hung, a General Practitioner student at the<br class="hidden md:block" />University of Medicine and Pharmacy, Vietnam National University.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center">
          <a
            href="/blogs"
            class="w-full sm:w-auto bg-primary hover:bg-primary/90 text-white px-8 md:px-10 py-4 md:py-5 rounded-full transition-all duration-300 transform hover:scale-105 text-base sm:text-lg font-medium shadow-lg hover:shadow-primary/30"
          >
            Explore My Blog â†’
          </a>
          <a
            href="/contact"
            class="w-full sm:w-auto bg-secondary hover:bg-secondary/90 text-white px-8 md:px-10 py-4 md:py-5 rounded-full transition-all duration-300 transform hover:scale-105 text-base sm:text-lg font-medium shadow-lg hover:shadow-secondary/30"
          >
            Let's Connect ðŸ’¬
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
